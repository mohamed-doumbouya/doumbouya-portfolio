            </div><!-- End Section Title -->

            <div class="container">

                <div class="row">

                    <div class="col-lg-6" data-aos="fade-up" data-aos-delay="100">
                        <h3 class="resume-title">Sumary</h3>

                        <div class="resume-item pb-0">
                            <h4>@string.Concat(Model.UserDTO.FirstName, " ", Model.UserDTO.LastName)</h4>
                            <p><em>@Model.UserDTO.Summary</em></p>
                            <ul>
                                <li>@string.Concat(Model.UserDTO.City, ", ", Model.UserDTO.Country)</li>
                                <li>@Model.UserDTO.Phone</li>
                                <li>@Model.UserDTO.Email</li>
                            </ul>
                        </div><!-- Edn Resume Item -->
                        @if (Model.UserDTO.Resume != null && Model.UserDTO.Resume.Educations != null && Model.UserDTO.Resume.Educations.Any())
                        {
                            <h3 class="resume-title">Education</h3>
                            @foreach (var education in Model.UserDTO.Resume.Educations)
                            {
                                <div class="resume-item">
                                    <h4>@education.Certification</h4>
                                    <h5>
                                        @education.StartDate.Year - @if (@education.EndDate.HasValue)
                                        {
                                            @education.EndDate.Value.Year
                                        }
                                        @{
                                            var message = new string("Présent");
                                            @message
                                        }
                                    </h5>
                                    <p><em>@education.Name, @education.City, @education.Country</em></p>
                                    <p>@education.Description</p>
                                </div>

                                <!-- Edn Resume Item -->
                            }
                        }
                    </div>

                    @if (Model.UserDTO.Resume != null && Model.UserDTO.Resume.Experiences != null && Model.UserDTO.Resume.Experiences.Any())
                    {
                        <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200">
                            <h3 class="resume-title">Professional Experience</h3>
                            @foreach (var experience in Model.UserDTO.Resume.Experiences)
                            {
                                <div class="resume-item">
                                    <h4>@experience.Role</h4>
                                    <h5>
                                        @experience.StartDate.Year - @if (@experience.EndDate.HasValue)
                                        {
                                            @experience.EndDate.Value.Year
                                        }

                                        @{
                                            var message = new string("Présent");
                                            @message
                                        }
                                    </h5>
                                    <p><em>@experience.EntrepriseName, @experience.City, @experience.Country </em></p>
                                    <ul>
                                        @foreach (var mission in experience.Missions)
                                        {
                                            <li>@mission.Description</li>
                                        }
                                    </ul>
                                </div>

                                <!-- Edn Resume Item -->
                            }

                        </div>
                    }

                </div>

            </div>

