@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "About";
}
@model MyPortfolio.Domain.DTO.UserDto

<!-- About Section -->
<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>About</h2>
        <p>Driven by a passion for technology, culture, and social impact, I’m a software engineer with a vision beyond code. Alongside my professional work, I actively engage in associations, explore music, and embrace the arts. I’m committed to leveraging my skills to create innovative tech and socio-economic projects that contribute to the development of <span style="color: #149ddd;">Guinea</span> and beyond. Combining technical expertise with a deep sense of purpose, I aim to make a meaningful impact on both the digital and real-world landscapes.</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4 justify-content-center">
            <div class="col-lg-4">
                <img src="@Url.Content("~/images/profile-img.jpeg")" class="img-fluid" alt="">
            </div>
            <div class="col-lg-8 content">
                <h2>@Model.Profession</h2>
                <p class="fst-italic py-3">
                    @Model.Summary
                </p>
                <div class="row">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Birthday:</strong> <span>@Model.Birthday</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Website:</strong> <span>@Model.Website</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Phone:</strong> <span>@Model.Phone</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>City:</strong> <span>@string.Concat(Model.Adress?.City, ", ", Model.Adress?.Country)</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <strong>Age:</strong> <span>@Model.Age</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Degree:</strong> <span>@Model.Degree</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@Model.Email</span></li>
                            <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@Model.Freelance</span></li>
                        </ul>
                    </div>
                </div>
                <p class="py-3">
                    By working together, you’ll benefit from a blend of technical expertise, creativity, and a strong sense of purpose. I bring a passion for continuous learning, a commitment to high-quality solutions, and a drive to make a positive impact through technology and innovation. Whether tackling complex projects or exploring new ideas, I strive to deliver results that matter, all while fostering a collaborative and dynamic environment. Let’s create something impactful together!
                </p>
            </div>
        </div>

    </div>

</section>

<!-- /About Section -->

<!-- Skills Section -->
@if (Model.Skills != null && Model.Skills.Any())
{
    <section id="skills" class="skills section light-background">

        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Skills</h2>
            <p>A blend of technical expertise and problem-solving abilities that drive my work. Here’s a breakdown of my key skills and proficiency levels</p>
        </div><!-- End Section Title -->

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row skills-content skills-animation">

                <div class="col-lg-6">

                    @foreach (var skill in Model.Skills)
                    {
                        <div class="progress">
                            <span class="skill"><span>@skill.Name</span> <i class="val">@skill.Percentage.ToString()%</i></span>
                            <div class="progress-bar-wrap">
                                <div class="progress-bar" role="progressbar" aria-valuenow=@skill.Percentage.ToString() aria-valuemin="0" aria-valuemax=@skill.Percentage.ToString()></div>
                            </div>
                        </div>

                        <!-- End Skills Item -->
                    }
                </div>

                <div class="col-lg-6">
                    @foreach (var skill in Model.Skills)
                    {
                        <div class="progress">
                            <span class="skill"><span>@skill.Name</span> <i class="val">@skill.Percentage.ToString()%</i></span>
                            <div class="progress-bar-wrap">
                                <div class="progress-bar" role="progressbar" aria-valuenow=@skill.Percentage.ToString() aria-valuemin="0" aria-valuemax=@skill.Percentage.ToString()></div>
                            </div>
                        </div>

                        <!-- End Skills Item -->
                    }
                </div>

            </div>

        </div>

    </section>

    <!-- /Skills Section -->
}
