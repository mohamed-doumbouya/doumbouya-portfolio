@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Contact";
}
@model MyPortfolio.Domain.Models.ViewModels.ContactViewModel

<section id="contact" class="contact section">

    <div class="container section-title" data-aos="fade-up">
        <h2>Contact</h2>
        <p>Let’s connect ! Whether for collaboration, inquiries, or new opportunities, feel free to reach out.</p>
    </div>

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">
            <div class="col-lg-7">
                <form asp-action="Index" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                    @Html.AntiForgeryToken()
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <label asp-for="SenderName" class="pb-2">Your Name</label>
                            <input asp-for="SenderName" class="form-control" required="">
                        </div>

                        <div class="col-md-6">
                            <label asp-for="SenderEmailAdress" class="pb-2">Your Email</label>
                            <input asp-for="SenderEmailAdress" class="form-control" required="">
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Subject" class="pb-2">Subject</label>
                            <input asp-for="Subject" class="form-control" required="">
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Message" class="pb-2">Message</label>
                            <textarea asp-for="Message" class="form-control" required=""></textarea>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>

                            <button type="submit">Send Message</button>
                        </div>

                    </div>
                </form>
            </div>

        </div>

    </div>

</section>