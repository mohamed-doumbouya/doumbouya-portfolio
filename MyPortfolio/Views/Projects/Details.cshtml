@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Project details";
}
@model MyPortfolio.Domain.DTO.ProjectDto

<!-- Page Title -->
<div class="page-title dark-background">
    <div class="container d-lg-flex justify-content-between align-items-center">
        <h1 class="mb-2 mb-lg-0">Portfolio Details</h1>
        <nav class="breadcrumbs">
            <ol>
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="current">Portfolio Details</li>
            </ol>
        </nav>
    </div>
</div><!-- End Page Title -->
<!-- Portfolio Details Section -->
<section id="portfolio-details" class="portfolio-details section">

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-8">
                <div class="portfolio-details-slider swiper init-swiper">

                    <script type="application/json" class="swiper-config">
                        {
                          "loop": true,
                          "speed": 600,
                          "autoplay": {
                            "delay": 5000
                          },
                          "slidesPerView": "auto",
                          "pagination": {
                            "el": ".swiper-pagination",
                            "type": "bullets",
                            "clickable": true
                          }
                        }
                    </script>

                    <div class="swiper-wrapper align-items-center">

                        <div class="swiper-slide">
                            <img src="@Url.Content(Model.ImageUrl)" alt="">
                        </div>

                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="portfolio-info" data-aos="fade-up" data-aos-delay="200">
                    <h3>@Model.Title</h3>
                    <ul>
                        <li><strong>Category</strong>: @Model.Category</li>
                        <li><strong>Client</strong>: @Model.Client</li>
                        <li><strong>Project start date</strong>: @Model.StartDate</li>
                        @if (@Model.EndDate.HasValue){
                            <li><strong>Project end date</strong>: @Model.EndDate.Value.ToString()</li>
                        }
                        <li><strong>Project URL</strong>: <a href="@Model.ProjectURL"> View the projet website</a></li>
                    </ul>
                </div>
                <div class="portfolio-description" data-aos="fade-up" data-aos-delay="300">
                    <h2>@Model.Summary</h2>
                    <p>
                        @Model.Description
                    </p>
                </div>
            </div>

        </div>

    </div>

</section><!-- /Portfolio Details Section -->